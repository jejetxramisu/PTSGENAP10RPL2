<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_marginBottom="20dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/tulisanig"
        android:layout_width="410dp"
        android:layout_height="70dp"/>

    <EditText
        android:id="@+id/loginemail"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/custom1"
        android:hint="Email"
        android:paddingLeft="30dp"
        android:paddingRight="40dp"
        android:translationX="30dp"
        android:translationY="200dp"/>

    <EditText
        android:id="@+id/loginpassword"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/custom1"
        android:hint="Password"
        android:paddingLeft="30dp"
        android:paddingRight="40dp"
        android:translationX="30dp"
        android:translationY="250dp"/>


     <Button
         android:textColorHint="#FAF5F5"
        android:id="@+id/login"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:backgroundTint="#0551D3"
        android:hint="Log in"
        android:paddingLeft="30dp"
        android:paddingRight="40dp"
        android:translationX="30dp"
        android:translationY="310dp"/>
    <TextView
        android:textColor="#F4F4F4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your login details?"
        android:translationX="60dp"
        android:translationY="370dp"/>

    <TextView
        android:textStyle="bold"
        android:textColor="#F4F4F4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get help logging in"
        android:translationX="220dp"
        android:translationY="370dp"/>
    <View
        android:background="#4E4B4B"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:translationX="30dp"
        android:translationY="420dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:translationX="190dp"
        android:translationY="412dp"
        android:textColor="@color/white"/>
    <View
        android:background="#4E4B4B"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:translationX="220dp"
        android:translationY="420dp"/>
    <ImageView
        android:layout_marginBottom="20dp"
        android:layout_marginTop="430dp"
        android:src="@drawable/logifb"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:translationX="78dp"/>
    <View
        android:background="#4E4B4B"
        android:layout_width="410dp"
        android:layout_height="1dp"
        android:translationX="0dp"
        android:translationY="670dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:translationX="90dp"
        android:translationY="680dp"
        android:textColor="@color/white"/>

    <TextView
        android:textStyle="bold"
        android:textColor="#F4F4F4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:translationX="240dp"
        android:translationY="680dp"/>


</RelativeLayout>